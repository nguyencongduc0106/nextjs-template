{
  "name": "nextjs-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start:dev": "env-cmd -f .env/.env.development next dev",
    "start:stag": "env-cmd -f .env/.env.staging next dev",
    "start:prod": "env-cmd -f .env/.env.production next dev",
    "build:dev": "env-cmd -f .env/.env.development next build",
    "build:stag": "env-cmd -f .env/.env.staging next build",
    "build:prod": "env-cmd -f .env/.env.production next build",
    "commit": "npx cz",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "check-types": "tsc --noEmit --pretty",
    "postinstall": "husky || true"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "env-cmd": "^10.1.0",
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "autoprefixer": "^10.4.20",
    "check-types": "^11.2.3",
    "commitizen": "^4.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.0.1",
    "husky": "9.0.11",
    "lint-staged": "^15.2.8",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
